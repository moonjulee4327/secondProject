<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tour">

	<insert id="insertTour"
		parameterType="kr.or.ddit.app.tour.vo.TourVO">
		INSERT INTO TOUR(TOUR_ID, TOUR_NM, TOUR_CONT, TOUR_SE, TOUR_ADDR, TOUR_PRI,
		TOUR_MAX_TO, TOUR_RD, TOUR_WRT, atch_file_id)
		VALUES(TOUR_SEQ.nextval, #{tourNm},#{tourCont}, #{tourSe}, #{tourAddr}, #{tourPri}, #{tourMaxTo}, SYSDATE,
		#{tourWrt}, #{atchFileId})
	</insert>

	<select id="tourList" resultType="tourVO">
		select *
		from tour
		order by tour_id desc
	</select>


	<select id="getTour" parameterType="String" resultType="tourVO">
		select *
		from tour
		where tour_id = #{tourId}
	</select>

	<update id="update">
		UPDATE tour
		SET tour_nm = #{tourNm}
		, tour_cont = #{tourCont}
		, tour_se = #{tourSe}
		, tour_addr = #{tourAddr}
		, tour_pri = #{tourPri}
		, tour_max_to = #{tourMaxTo}
		, tour_rd = sysdate
		, tour_wrt = #{tourWrt}
		, atch_file_id = #{atchFileId}
		WHERE
		tour_id = #{tourId}
	</update>


	<delete id="delete" parameterType="String">
		DELETE FROM tour
		WHERE tour_id in (#{aaaaaa})
	</delete>



	<select id="search" parameterType="String" resultType="tourVO">
		select * from tour where 1 = 0
		<if test="value != null and value != ''">
		 	or tour_nm like '%' || #{value} || '%'
		 	or tour_cont like '%' || #{value} || '%'
		  	or tour_se like '%' || #{value} || '%'
		  	or tour_addr like '%' || #{value} || '%'
		</if>
		<if test="value == null or value == ''">
			or 1 = 1
		</if>
	</select>





</mapper>